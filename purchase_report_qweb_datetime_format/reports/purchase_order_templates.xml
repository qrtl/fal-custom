<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_purchaseorder_document_inherit"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//p[@t-field='o.date_approve']" position="replace">
            <t t-if="o.partner_id.lang == 'ja_JP'">
                <p>
                    <span
                        t-field="o.date_approve"
                        t-options='{"widget": "datetime","format": "yyyy年MM月dd日 HH時mm分"}'
                    />
                </p>
            </t>
            <t t-else="">
                <p>
                    <span
                        t-field="o.date_approve"
                        t-options='{"widget": "datetime","format": "MM/dd/yyyy HH:mm"}'
                    />
                </p>
            </t>
        </xpath>
        <xpath expr="//span[@t-field='line.date_planned']" position="replace">
            <t t-if="o.partner_id.lang == 'ja_JP'">
                <p>
                    <span
                        t-field="line.date_planned"
                        t-options='{"widget": "datetime","format": "yyyy年MM月dd日 HH時mm分"}'
                    />
                </p>
            </t>
            <t t-else="">
                <p>
                    <span
                        t-field="line.date_planned"
                        t-options='{"widget": "datetime","format": "MM/dd/yyyy HH:mm"}'
                    />
                </p>
            </t>
        </xpath>
    </template>
</odoo>
