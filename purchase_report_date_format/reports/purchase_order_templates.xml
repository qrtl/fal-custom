<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_purchaseorder_document_inherit"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//p[@t-field='o.date_approve']" position="attributes">
            <attribute name="t-att-style">'display: none'</attribute>
        </xpath>
        <xpath expr="//p[@t-field='o.date_approve']" position="after">
            <p t-field="o.date_approve" class="m-0" t-options='{"widget": "date"}' />
        </xpath>
        <xpath expr="//span[@t-field='line.date_planned']" position="attributes">
            <attribute name="t-att-style">'display: none'</attribute>
        </xpath>
        <xpath expr="//span[@t-field='line.date_planned']" position="after">
            <span t-field="line.date_planned" t-options='{"widget": "date"}' />
        </xpath>
    </template>
</odoo>
