<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_purchasequotation_document_inherit"
        inherit_id="purchase.report_purchasequotation_document"
    >
        <xpath expr="//span[@t-field='order_line.date_planned']" position="replace">
            <t t-if="o.partner_id.lang == 'ja_JP'">
                <p>
                    <span
                        t-field="order_line.date_planned"
                        t-options='{"widget": "datetime","format": "yyyy年MM月dd日 HH時mm分"}'
                    />
                </p>
            </t>
            <t t-else="">
                <p>
                    <span
                        t-field="order_line.date_planned"
                        t-options='{"widget": "datetime","format": "MM/dd/yyyy HH:mm"}'
                    />
                </p>
            </t>
        </xpath>
    </template>
</odoo>
